[Unit]
Description=Show SNP guest test status on the Host
DefaultDependencies=no
After=network-online.target read-guest-journal.service
Wants=network-online.target read-guest-journal.service
ConditionPathExists=/run/read-guest-journal.ok

[Service]
Type=oneshot
ExecStart=/usr/local/lib/scripts/show-snp-guest-test-status.sh
StandardOutput=journal+console
StandardError=journal+console
ExecStartPost=/usr/bin/touch /run/show-snp-guest-test-log.ok

[Install]
WantedBy=multi-user.target